<idea-plugin url="https://github.com/intheclouddan/intellij-plugin-ld">
    <id>com.github.intheclouddan.intellijpluginld</id>
    <name>LaunchDarkly</name>
    <vendor>LaunchDarkly</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends optional="true" config-file="withJavaModule.xml">com.intellij.modules.java</depends>
    <!--    <depends>com.intellij.modules.java</depends>-->
    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable
                instance="com.github.intheclouddan.intellijpluginld.settings.LaunchDarklyApplicationConfigurable"
                id="launchdarkly.app.settings" displayName="LaunchDarkly Plugin"/>
        <projectConfigurable instance="com.github.intheclouddan.intellijpluginld.settings.LaunchDarklyConfigurable"
                             displayName="Project Overrides" id="launchdarkly.settings"
                             parentId="launchdarkly.app.settings"/>
        <!--        <backgroundPostStartupActivity implementation="com.github.intheclouddan.intellijpluginld.coderefs.FlagAliases"/>-->
        <projectService serviceImplementation="com.github.intheclouddan.intellijpluginld.coderefs.FlagAliases"/>
        <applicationService
                serviceImplementation="com.github.intheclouddan.intellijpluginld.settings.LaunchDarklyApplicationConfig"/>

        <projectService
                serviceImplementation="com.github.intheclouddan.intellijpluginld.settings.LaunchDarklyMergedSettings"/>

        <projectService serviceImplementation="com.github.intheclouddan.intellijpluginld.FlagStore"/>
        <projectService serviceImplementation="com.github.intheclouddan.intellijpluginld.settings.LaunchDarklyConfig"/>
        <projectService serviceInterface="com.github.intheclouddan.intellijpluginld.messaging.MessageBusService"
                        serviceImplementation="com.github.intheclouddan.intellijpluginld.messaging.DefaultMessageBusService"
        />
        <applicationService serviceInterface="com.github.intheclouddan.intellijpluginld.messaging.MessageBusService"
                            serviceImplementation="com.github.intheclouddan.intellijpluginld.messaging.AppDefaultMessageBusService"
        />

        <projectService serviceImplementation="com.github.intheclouddan.intellijpluginld.toolwindow.FlagToolWindow"/>
        <toolWindow id="LaunchDarkly Flags" icon="/icons/flag.svg" anchor="right"
                    factoryClass="com.github.intheclouddan.intellijpluginld.toolwindow.FlagToolWindowFactory"/>
        <documentationProvider order="first"
                               implementation="com.github.intheclouddan.intellijpluginld.LDDocumentationProvider"/>
        <!--        <configurationType-->
        <!--                implementation="com.github.intheclouddan.intellijpluginld.coderefs.CodeRefsRunConfigurationType"/>-->

    </extensions>

    <actions>
        <!-- CustomDefaultActionGroup demonstrates declaring an action group based on a ActionGroup class supplied by this plugin.
         This group is to be inserted atop the Editor Popup Menu. It declares one action in the group. -->
        <!--        <group id="com.github.intheclouddan.intellijpluginld.action.CustomDefaultActionGroup"-->
        <!--               class="com.github.intheclouddan.intellijpluginld.action.CustomDefaultActionGroup" popup="true"-->
        <!--               text="Popup Grouped Actions" description="Custom defaultActionGroup demo">-->
        <!--            <add-to-group group-id="EditorPopupMenu" anchor="first"/>-->
        <action id="com.github.intheclouddan.intellijpluginld.action.RefreshAction"
                class="com.github.intheclouddan.intellijpluginld.action.RefreshAction"
                text="Refresh Flags" description="Refresh Flags" icon="AllIcons.Actions.Refresh">
        </action>
        <action id="com.github.intheclouddan.intellijpluginld.action.CopyKeyAction"
                class="com.github.intheclouddan.intellijpluginld.action.CopyKeyAction"
                text="Copy Flag Key" description="Copy Flag Key to Clipboard" icon="AllIcons.Actions.Copy">
        </action>
        <!--        </group>-->
        <action id="com.github.intheclouddan.intellijpluginld.action.ToggleFlagAction"
                class="com.github.intheclouddan.intellijpluginld.action.ToggleFlagAction"
                text="Toggle Flag" description="Toggle Flag" icon="AllIcons.Actions.Copy">
        </action>
        <action id="com.github.intheclouddan.intellijpluginld.action.OpenInBrowserAction"
                class="com.github.intheclouddan.intellijpluginld.action.OpenInBrowserAction"
                text="Open in Browser" description="Open in Browser" icon="AllIcons.Actions.OpenNewTab">
        </action>
        <action id="com.github.intheclouddan.intellijpluginld.action.ChangeFallthroughAction"
                class="com.github.intheclouddan.intellijpluginld.action.ChangeFallthroughAction"
                text="Change Fallthrough Variation" description="Change Fallthrough Variation"
                icon="AllIcons.Actions.OpenNewTab">
        </action>
        <action id="com.github.intheclouddan.intellijpluginld.action.ChangeOffVariationAction"
                class="com.github.intheclouddan.intellijpluginld.action.ChangeOffVariationAction"
                text="Change Off Variation" description="Change Off Variation"
                icon="AllIcons.Actions.OpenNewTab">
        </action>
    </actions>

</idea-plugin>
